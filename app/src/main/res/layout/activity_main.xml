<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        android:elevation="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/box1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/square_border"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/box4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/square_border"
                android:layout_below="@id/box1"
                app:layout_constraintTop_toBottomOf="@id/box1"/>
            <ImageView
                android:id="@+id/box7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/square_border"
                android:layout_below="@id/box1"
                app:layout_constraintTop_toBottomOf="@id/box4"/>

            <ImageView
                android:id="@+id/box2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/square_border"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/box1"/>
            <ImageView
                android:id="@+id/box5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/square_border"
                android:layout_below="@id/box1"
                app:layout_constraintTop_toBottomOf="@id/box2"
                app:layout_constraintLeft_toRightOf="@id/box1"/>
            <ImageView
                android:id="@+id/box8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/square_border"
                android:layout_below="@id/box1"
                app:layout_constraintTop_toBottomOf="@id/box5"
                app:layout_constraintLeft_toRightOf="@id/box1"/>

            <ImageView
                android:id="@+id/box3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/square_border"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/box2" />
            <ImageView
                android:id="@+id/box6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/square_border"
                android:layout_below="@id/box1"
                app:layout_constraintTop_toBottomOf="@id/box3"
                app:layout_constraintLeft_toRightOf="@id/box2"/>
            <ImageView
                android:id="@+id/box9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/square_border"
                android:layout_below="@id/box1"
                app:layout_constraintTop_toBottomOf="@id/box6"
                app:layout_constraintLeft_toRightOf="@id/box2"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>